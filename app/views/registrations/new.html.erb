<div class = "row">
  <div class = "well col-md-6 col-md-offset-3">
    <h1>Sign Up for gCamp! </h1>

    <%= form_for @user, url:signup_path do |f| %>
      <% if @user.errors.present? %>
        <div class = "row">
          <div id= "error_explanation", class = "text-danger" role = "alert">
            <ul class = "list-unstyled">
              <% @user.errors.full_messages.each do |message| %>
                <li><%=message%></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class ="row">
        <%= f.label :first_name, class: "col-sm-4" %>
      </div>
      <div class= "row col-sm-12">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class = "row">
        <%= f.label :last_name, class: "col-sm-4 col-sm-8" %>
      </div>
      <div class = "row col-sm-12">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class = "row">
        <%= f.label :email, class: "col-sm-4" %>
      </div>
      <div class = "row col-sm-12">
        <%=f.email_field :email, class: "form-control" %>
      </div>

      <div class = "row">
        <%= f.label :password, class: "col-sm-4" %>
      </div>
      <div class = "row col-sm-12">
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class = "row">
        <%= f.label :password_confirmation, class: "col-sm-4" %>
      </div>
      <div class = "row col-sm-12">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class = "form-group">
        <%= f.submit "Sign Up", class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
