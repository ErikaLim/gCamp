<div class="page-header">
  <div class="pull-right">
  
    <%= link_to 'All', @task %>
    |
    <%= link_to 'Incomplete', (filter_params({completed: false})) %>
    <%= link_to 'New Task', new_task_path, class: "btn btn-info"%>
  </div>
  <h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed</th>
      <th>Due Date</th>

    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.completed %></td>
        <td><%= task.due_date %></td>
        <td>
          <div class = "pull-right">
            <%= link_to 'Show', task, class:"btn btn-success" %>
            <%= link_to 'Edit', edit_task_path(task), class:"btn btn-info" %>
            <%= link_to 'Destroy', task, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
