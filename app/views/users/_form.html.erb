<%= form_for @user, html: {class: "form-horizontal"} do |f| %>
  <% if @user.errors.any? %>
    <div class = "row">
      <div id="error_explanation", class = "alert alert-danger col-sm-offset-1 col-sm-6" role = "alert">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved: </h4>

        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class = "row">
    <div class = "form-group">
      <%= f.label :first_name, class:"col-sm-2"%>
      <div class="col-md-4">
        <%=f.text_field :first_name, class: "form-control"%>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "form-group">
      <%= f.label :last_name, class: "col-sm-2"%>
      <div class= "col-sm-4">
        <%=f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class = "row">
    <div class = "form-group">
      <%=f.label :email, class: "col-sm-2" %>
      <div class = "col-sm-4">
        <%=f.email_field :email, class: "form-control"%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="actions">
        <div class = "col-sm-offset-2 col-sm-10">
          <%=f.submit class:"btn btn-primary"%>
          <%= link_to "Cancel", users_path, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
